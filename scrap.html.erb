<%= form_for(:search, :method => :get, :html => { :class => "form-horizontal" }) do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :submit, :class => "form-control" %>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>